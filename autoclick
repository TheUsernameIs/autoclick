-- Obtener servicios
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local player = Players.LocalPlayer

-- Crear UI para mostrar la lista
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 400)
frame.Position = UDim2.new(0.5, -150, 0.5, -200)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Parent = screenGui

-- Título
local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, 0, 0.1, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextScaled = true
titleLabel.Text = "Carpetas en Workspace:"
titleLabel.Parent = frame

-- Botón para cerrar
local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.Text = "X"
closeButton.TextScaled = true
closeButton.TextColor3 = Color3.fromRGB(255, 0, 0)
closeButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
closeButton.Parent = frame

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

-- ScrollingFrame para la lista
local listFrame = Instance.new("ScrollingFrame")
listFrame.Size = UDim2.new(1, 0, 0.9, 0)
listFrame.Position = UDim2.new(0, 0, 0.1, 0)
listFrame.BackgroundTransparency = 1
listFrame.ScrollBarThickness = 10
listFrame.Parent = frame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = listFrame

-- Función para actualizar la lista
local function updateFolderList()
    -- Limpiar la lista antes de actualizar
    for _, child in ipairs(listFrame:GetChildren()) do
        if child:IsA("TextLabel") then
            child:Destroy()
        end
    end

    -- Mostrar solo las carpetas dentro de Workspace
    for _, obj in ipairs(Workspace:GetChildren()) do
        if obj:IsA("Folder") then
            local folderLabel = Instance.new("TextLabel")
            folderLabel.Size = UDim2.new(1, 0, 0, 30)
            folderLabel.BackgroundTransparency = 1
            folderLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
            folderLabel.Text = obj.Name
            folderLabel.TextScaled = true
            folderLabel.TextWrapped = true
            folderLabel.Parent = listFrame
        end
    end
end

-- Actualizar la lista cada segundo
while true do
    updateFolderList()
    wait(1)
end


