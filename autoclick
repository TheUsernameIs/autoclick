-- Obtener el jugador local
local player = game.Players.LocalPlayer

-- Acceder a PlayerGui y la jerarquía de objetos
local playerGui = player:WaitForChild("PlayerGui")
local screenGui = playerGui:WaitForChild("LeftCenter") -- El ScreenGui llamado "LeftCenter"
local leftCenterFrame = screenGui:WaitForChild("LeftCenter") -- El Frame llamado "LeftCenter"
local buttonsFrame = leftCenterFrame:WaitForChild("Buttons") -- El Frame llamado "Buttons"
local indexButton = buttonsFrame:WaitForChild("Index") -- El ImageButton llamado "Index"

-- Función para interactuar con el ImageButton
local function interactuarConBoton()
    -- Verificar que el botón 'Index' está disponible
    if indexButton then
        -- Simular el clic en el botón (esto podría activar cualquier evento conectado al botón)
        indexButton.MouseButton1Click:Fire()

        -- O hacer lo que desees cuando se "interactúa" con el botón
        print("Se ha interactuado con el botón 'Index'.")

        -- También puedes cambiar propiedades del botón si es necesario
        indexButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)  -- Ejemplo: Cambiar el color del botón a rojo
    else
        print("El botón 'Index' no se encuentra.")
    end
end

-- Ejecutar la función de interacción
interactuarConBoton()



